#Encendemos las luces
12 18 * * * sh /home/pi/source/TFG/scripts/LucesOn.sh

#Bajamos TODAS
17 18 * * * sh /home/pi/source/TFG/scripts/control/GPIO_off.sh
18 18 * * * sh /home/pi/source/TFG/scripts/control/Bajar.sh
24 18 * * * sh /home/pi/source/TFG/scripts/control/GPIO_off.sh

#Apagamos las luces
24 18 * * * sh /home/pi/source/TFG/scripts/LucesOn.sh

#Todos los días se  reinicia la máquina par que el demonio siempre esté correcto por la mañana
05 04 * * * sudo reboot

#Lanzamos el script de toma de horas
05 00 * * * cd /home/pi/source/TFG/scripts/auto/ && bash LanzaTodoElProceso.sh


